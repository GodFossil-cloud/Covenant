source "https://rubygems.org"

# Minimal Jekyll toolchain to render Liquid includes (_includes/*) into static HTML.
# We deploy the built _site to gh-pages so the served site does not depend on the Pages build pipeline.

gem "jekyll", "~> 4.3"

# Required for Ruby 3+ when running Jekyll via WEBrick.
gem "webrick", "~> 1.8"
